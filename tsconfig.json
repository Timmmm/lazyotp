{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        // Don't allow importing JS files.
        "allowJs": false,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        // Allow importing JSON files.
        "resolveJsonModule": true,
        "isolatedModules": true,
        // Don't emit code since Vite will do it.
        "noEmit": true,
        // How to compile TSX.
        "jsx": "react-jsx",
        // Import Preact in TSX files.
        "jsxImportSource": "preact",
        // Needed for some imports.
        "allowSyntheticDefaultImports": true,

        // Stricter Typescript.
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
    },
    "include": [
        "src",
        "vite.config.ts",
        "eslint.config.ts"
    ]
}
